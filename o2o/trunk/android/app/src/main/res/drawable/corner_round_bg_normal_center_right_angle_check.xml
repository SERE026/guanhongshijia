<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/pink" />

            <stroke android:width="1px" android:color="@color/pink" />

            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="0px" android:topLeftRadius="0px" android:topRightRadius="0px" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <solid android:color="@color/pink" />

            <stroke android:width="1px" android:color="@color/pink" />

            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="0px" android:topLeftRadius="0px" android:topRightRadius="0px" />
        </shape></item>
    <item><shape>
            <solid android:color="@color/white" />

            <stroke android:width="1px" android:color="@color/gray" />

            <corners android:bottomLeftRadius="0px" android:bottomRightRadius="0px" android:topLeftRadius="0px" android:topRightRadius="0px" />
        </shape></item>

</selector>