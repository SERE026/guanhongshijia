<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/goods_name_tip"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称：" />

    <TextView
        android:id="@+id/goods_name"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/goods_name_tip"
        android:layout_toRightOf="@+id/goods_name_tip"
        android:singleLine="true"
        android:text="河马家清润矿物泥浆面膜" />

    <TextView
        android:id="@+id/goods_count"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_name"
        android:layout_toRightOf="@+id/goods_count_tip"
        android:text="1" />

    <TextView
        android:id="@+id/goods_count_tip"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/goods_count"
        android:text="数量：" />

    <TextView
        android:id="@+id/goods_price"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_count"
        android:layout_toRightOf="@+id/goods_price_tip"
        android:text="25.60" />

    <TextView
        android:id="@+id/goods_price_tip"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/goods_price"
        android:text="单价：" />

    <TextView
        android:id="@+id/goods_total_price"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goods_price"
        android:layout_toRightOf="@+id/goods_total_price_tip"
        android:text="25.60" />

    <TextView
        android:id="@+id/goods_total_price_tip"
        style="@style/txt_order_details_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/goods_total_price"
        android:text="小计：" />

</RelativeLayout>