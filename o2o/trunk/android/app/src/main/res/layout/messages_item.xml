<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <ImageView
            android:id="@+id/ico_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/img_delete" />

        <TextView
            android:id="@+id/time"
            style="@style/slide_viewpager_item_txt_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/ico_del"
            android:layout_toRightOf="@id/title"
            android:text="2014-5-13 15:10:58" />

        <include
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ico_del"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            layout="@layout/line_horizon" />

        <TextView
            android:id="@+id/txt"
            style="@style/slide_viewpager_item_txt_balck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/line_1"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:autoLink="all"
            android:text="您关注的商品“碧欧泉 男士活碳洁面乳 50ml”正在参加清仓促销活动，赶紧去看看吧！ www.baidu.com" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt"
            android:layout_alignTop="@id/ico_del"
            android:text="打折促销"
            android:textColor="@color/pink"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>