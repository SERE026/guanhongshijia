<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <cn.com.dyninfo.o2o.furniture.view.PullToRefreshListView
        android:id="@+id/refreshlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/none_color"
        android:cacheColorHint="@color/none_color"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="@color/none_color"
        android:overScrollMode="never"
        android:scrollbarFadeDuration="200"
        android:scrollbarSize="3dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbarThumbVertical="@color/pink_btn_normal"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_below="@id/refreshlist"
        android:visibility="gone" >

        <include layout="@layout/cart_none" />
    </LinearLayout>

</RelativeLayout>