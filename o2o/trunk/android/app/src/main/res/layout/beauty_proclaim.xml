<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".activity.home.BeautyProclaim" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <include layout="@layout/title" />
    </LinearLayout>

    <cn.com.dyninfo.o2o.furniture.view.PullToRefreshListView
        android:id="@+id/refreshListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_marginBottom="48dp"
        android:background="@color/none_color"
        android:cacheColorHint="@color/none_color"
        android:divider="@null"
        android:listSelector="@color/none_color"
        android:scrollbars="none" >
    </cn.com.dyninfo.o2o.furniture.view.PullToRefreshListView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <include
            layout="@layout/bottom"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>