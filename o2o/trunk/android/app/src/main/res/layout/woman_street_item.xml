<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/women_street_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <ImageView
        android:id="@+id/img_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/none_color" />

    <ImageView
        android:id="@+id/img_selector"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/imageview_selector" />

    <TextView
        android:id="@+id/txt"
        style="@style/women_street_item_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_img"
        android:text="加载中...." />

</RelativeLayout>