<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_473e45"
        app:layout_marginTopPercent="23%"
        app:layout_marginLeftPercent="32%"
        app:layout_marginRightPercent="32%"
        app:layout_marginBottomPercent="23%">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            app:layout_heightPercent="15%"
            android:gravity="center"
            android:text="绑定银行卡"
            android:textColor="@color/color_bcbcbc"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_id_num"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/tv_title"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_bind_bank_card"
            android:drawablePadding="20dp"
            android:hint="身份证号"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/et_id_num"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="13dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_login_avtar"
            android:drawablePadding="22dp"
            android:hint="姓名"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/et_name"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_find_pwd_phone"
            android:drawablePadding="22dp"
            android:hint="手机号码"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_bank_num"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/et_phone_num"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_bind_bank_card"
            android:drawablePadding="20dp"
            android:hint="银行账号"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/et_bank_num"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="37%"
            app:layout_marginRightPercent="37%"
            android:background="@drawable/icon_find_pwd_btn"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>