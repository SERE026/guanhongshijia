<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="117.5dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/tv_order_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="订单支付"
            android:textColor="@color/color_202020"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_pay"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="55dp"
            android:gravity="center_vertical|left"
            android:text="请您及时付款，以便订单尽快处理！订单号：20504166892"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_pay"
            android:layout_toRightOf="@id/tv_one"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="120dp"
            android:gravity="center_vertical|right"
            android:text="应付金额：154856.00"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_one"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="55dp"
            android:gravity="center_vertical|left"
            android:text="请您在提交订单后24小时内完成支付，否则订单会自动取消。"
            android:textColor="@color/color_f74a3e"
            android:textSize="9sp"/>

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_two"
            android:layout_toRightOf="@id/tv_one"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="120dp"
            android:gravity="center_vertical|right"
            android:text="订单详情"
            android:textSize="9sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_three"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="39dp"
            android:background="@drawable/shape_edittext_user_info">

            <CheckBox
                android:id="@+id/cb_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_coupon"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="5dp"
                android:drawableRight="@drawable/icon_order_pay_down"
                android:drawablePadding="5dp"
                android:text="优惠券"
                android:textSize="9sp"/>

            <CheckBox
                android:id="@+id/cb_online_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_coupon"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_online_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_online_pay"
                android:layout_below="@id/tv_coupon"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:text="银联在线支付"
                android:textSize="12sp"/>

            <CheckBox
                android:id="@+id/cb_online_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_coupon"
                android:layout_toRightOf="@id/tv_online_pay"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tv_online_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_online_bank"
                android:layout_below="@id/tv_coupon"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:text="网上银行"
                android:textSize="12sp"/>

            <CheckBox
                android:id="@+id/cb_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cb_coupon"
                android:layout_toRightOf="@id/tv_online_bank"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tv_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb_alipay"
                android:layout_below="@id/tv_coupon"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="5dp"
                android:text="支付宝支付"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/cb_online_pay"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/icon_order_pay_now"
                android:gravity="center"
                android:text="立即支付"
                android:textColor="@color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btn_pay_now"
                android:layout_below="@id/cb_online_pay"
                android:layout_marginTop="29dp"
                android:layout_marginLeft="20dp"
                android:text="商品价格低于两万全额支付，超过两万显示预付定金"
                android:textSize="9sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>