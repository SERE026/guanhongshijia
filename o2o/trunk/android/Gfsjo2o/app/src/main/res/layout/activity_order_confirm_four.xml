<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_marginBottomPercent="10%"
        app:layout_marginLeftPercent="13%"
        app:layout_marginRightPercent="9%"
        app:layout_marginTopPercent="17%">

        <TextView
            android:id="@+id/tv_order_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="订单支付"
            android:textSize="18sp"
            app:layout_marginTopPercent="12%" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_pay"
            android:text="请您及时付款，以便订单尽快处理！订单号："
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="10%" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_pay"
            android:layout_toRightOf="@id/tv_desc"
            android:gravity="center_vertical"
            android:text="20504166892"
            app:layout_marginTopPercent="10%" />

        <TextView
            android:id="@+id/tv_should_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_pay"
            android:layout_toRightOf="@id/tv_order_number"
            android:text="应付金额："
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="10%" />

        <TextView
            android:id="@+id/tv_should_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_pay"
            android:layout_toRightOf="@id/tv_should_pay"
            android:gravity="center_vertical"
            android:text="155056.00"
            app:layout_marginTopPercent="10%" />

        <CheckBox
            android:id="@+id/cb_balance_pay"
            android:layout_below="@id/tv_desc"
            android:text="账户余额"
            android:textColor="@color/color_6f5f62"
            android:enabled="false"
            app:layout_heightPercent="5%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="12%"
            app:layout_widthPercent="18%" />

        <CheckBox
            android:id="@+id/cb_alipay"
            android:layout_below="@id/tv_desc"
            android:layout_toRightOf="@id/cb_balance_pay"
            android:text="支付宝支付"
            android:textColor="@color/color_6f5f62"
            app:layout_heightPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="12%"
            app:layout_widthPercent="18%" />

        <Button
            android:id="@+id/btn_pay_now"
            android:layout_below="@id/cb_balance_pay"
            android:background="@drawable/shape_btn_modify_pwd"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_heightPercent="7%"
            app:layout_marginLeftPercent="10%"
            app:layout_marginTopPercent="13%"
            app:layout_widthPercent="18%" />

        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cb_balance_pay"
            android:layout_toRightOf="@id/btn_pay_now"
            android:gravity="center_vertical"
            android:text="商品价格低于两万全额支付，超过两万显示预付定金"
            app:layout_marginLeftPercent="3%"
            app:layout_marginTopPercent="15%" />

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>