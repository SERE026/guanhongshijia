            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                app:layout_heightPercent="15%"
                android:gravity="center"
                android:text="找回密码"
                android:textColor="@color/color_bcbcbc"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_phone_num"
                app:layout_widthPercent="62%"
                app:layout_heightPercent="13%"
                android:layout_below="@id/tv_title"
                app:layout_marginTopPercent="3%"
                app:layout_marginLeftPercent="10%"
                android:background="@drawable/icon_user_center_item_bg"
                android:maxLength="25"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:drawableLeft="@drawable/icon_find_pwd_phone"
                android:drawablePadding="15dp"
                android:hint="请输入手机号"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textColorHint="@color/color_959699"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="match_parent"
                app:layout_heightPercent="13%"
                android:layout_below="@id/tv_title"
                android:layout_toRightOf="@id/et_phone_num"
                app:layout_marginLeftPercent="2%"
                app:layout_marginTopPercent="3%"
                app:layout_marginRightPercent="5%"
                android:background="@drawable/find_pwd_btn_style"
                android:gravity="center"
                android:text="点击发送"
                android:textColor="@color/color_bcbcbc"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/et_code"
                app:layout_widthPercent="62%"
                app:layout_heightPercent="13%"
                android:layout_below="@id/et_phone_num"
                app:layout_marginTopPercent="3%"
                app:layout_marginLeftPercent="10%"
                android:background="@drawable/icon_user_center_item_bg"
                android:maxLength="25"
                android:paddingLeft="46dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:hint="请输入校验码"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textColorHint="@color/color_959699"
                android:textSize="13sp"/>

            <Button
                android:id="@+id/btn_get_again"
                android:layout_width="match_parent"
                app:layout_heightPercent="13%"
                android:layout_below="@id/btn_send"
                android:layout_toRightOf="@id/et_code"
                app:layout_marginLeftPercent="2%"
                app:layout_marginTopPercent="3%"
                app:layout_marginRightPercent="5%"
                android:background="@drawable/find_pwd_btn_style"
                android:gravity="center"
                android:text="重新获取"
                android:textColor="@color/color_bcbcbc"
                android:textSize="13sp"/>

            <EditText
