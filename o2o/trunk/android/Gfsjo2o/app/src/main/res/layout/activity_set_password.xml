<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="177.5dp">

        <TextView
            android:id="@+id/tv_set_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/icon_setting"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="设置密码"
            android:textSize="20sp"
            android:textColor="@color/color_bcbcbc"/>

        <Button
            android:id="@+id/btn_set"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_set_password"
            android:layout_marginTop="17dp"
            android:background="@drawable/btn_set_pwd_style"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="设置锁定密码"
            style="@style/item_text_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/btn_set"
            android:background="@color/color_ff5500"/>

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/btn_set"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_modify_pwd_style"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="修改锁定密码"
            style="@style/item_text_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/btn_modify"
            android:background="@color/color_ff5500"/>

        <Button
            android:id="@+id/btn_find"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/btn_modify"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_find_pwd_style"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="找回锁定密码"
            style="@style/item_text_style"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/btn_find"
            android:background="@color/color_ff5500"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_left"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="160dp">

        <!-- 设置锁定密码 -->
        <RelativeLayout
            android:id="@+id/rl_set_pwd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@color/color_1d222e"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_set_input_pwd"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="输入密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_set_input_pwd"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/tv_set_input_pwd"
                android:background="@drawable/icon_bg_edittext"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_set_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/et_set_input_pwd"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="21dp"
                android:gravity="center"
                android:text="确认密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_set_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/et_set_input_pwd"
                android:layout_toRightOf="@id/tv_set_confirm_pwd"
                android:background="@drawable/icon_bg_edittext"
                android:layout_marginRight="15dp"
                android:layout_marginTop="21dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_set_complete"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/et_set_confirm_pwd"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/icon_bg_login_btn"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="16sp"/>

        </RelativeLayout>

        <!-- 修改锁定密码 -->
        <RelativeLayout
            android:id="@+id/rl_modify_pwd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@color/color_2f2b34"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_modify_old_pwd"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:text="原密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_modify_old_pwd"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_toRightOf="@id/tv_modify_old_pwd"
                android:background="@drawable/shape_edittext_modify_pwd"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_modify_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/tv_modify_old_pwd"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="新密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_modify_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/et_modify_old_pwd"
                android:layout_toRightOf="@id/tv_modify_new_pwd"
                android:background="@drawable/shape_edittext_modify_pwd"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_modify_confirm_new"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/tv_modify_new_pwd"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="确认密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_confirm_new"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/et_modify_new_pwd"
                android:layout_toRightOf="@id/tv_modify_confirm_new"
                android:background="@drawable/shape_edittext_modify_pwd"
                android:layout_marginRight="17dp"
                android:layout_marginTop="12dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_modify_confirm"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/et_confirm_new"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/shape_btn_modify_pwd"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/color_cbcbcb"
                android:textSize="16sp"/>

        </RelativeLayout>

        <!-- 找回锁定密码 -->
        <RelativeLayout
            android:id="@+id/rl_find_pwd"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:background="@color/color_2f2b34"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_find_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:text="手机号："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_find_phone_number"
                android:layout_width="80dp"
                android:layout_height="23dp"
                android:layout_toRightOf="@id/tv_find_phone_number"
                android:background="@drawable/shape_edittext_find_pwd"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="26dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/shape_btn_modify_pwd"
                android:layout_toRightOf="@id/et_find_phone_number"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_cbcbcb"
                android:textSize="9sp"/>

            <EditText
                android:id="@+id/et_find_code"
                android:layout_width="65dp"
                android:layout_height="23dp"
                android:layout_below="@id/et_find_phone_number"
                android:layout_toRightOf="@id/tv_find_phone_number"
                android:background="@drawable/shape_edittext_find_pwd"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="6dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_input_code"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/shape_btn_modify_pwd"
                android:layout_toRightOf="@id/et_find_code"
                android:layout_below="@id/btn_get_code"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="14dp"
                android:gravity="center"
                android:text="输入验证码"
                android:textColor="@color/color_cbcbcb"
                android:textSize="9sp"/>

            <TextView
                android:id="@+id/tv_find_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_below="@id/et_find_code"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:text="新密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_find_new_pwd"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/et_find_code"
                android:layout_toRightOf="@id/tv_find_new_pwd"
                android:background="@drawable/shape_edittext_find_pwd"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_find_confirm_new"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_below="@id/tv_find_new_pwd"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="确认密码："
                android:textSize="14sp"
                android:textColor="@color/color_a4a5a5"/>

            <EditText
                android:id="@+id/et_find_confirm_new"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_below="@id/et_find_new_pwd"
                android:layout_toRightOf="@id/tv_find_confirm_new"
                android:background="@drawable/shape_edittext_find_pwd"
                android:layout_marginRight="17dp"
                android:layout_marginTop="4dp"
                android:maxLength="25"
                android:singleLine="true"
                android:gravity="center_vertical"/>

            <Button
                android:id="@+id/btn_find_complete"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/et_find_confirm_new"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="28dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/shape_btn_find_pwd"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/color_fcfefe"
                android:textSize="16sp"/>

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>