    <RelativeLayout
        android:id="@+id/rl_left"
        app:layout_widthPercent="25%"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        app:layout_marginTopPercent="35%"
        app:layout_marginLeftPercent="20%">

        <TextView
            android:id="@+id/tv_set_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/icon_setting"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="设置密码"
            android:textSize="20sp"
            android:textColor="@color/color_bcbcbc"/>

        <Button
            android:id="@+id/btn_set"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_set_password"
            android:layout_marginTop="17dp"
            android:background="@drawable/user_center_item_bg_style"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="设置锁定密码"
            android:textColor="@color/color_e3e6eb"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/btn_set"
            android:background="@color/color_bcbcbc"/>

        <Button
            android:id="@+id/btn_find"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/btn_set"
            android:layout_marginTop="30dp"
            android:background="@drawable/user_center_item_bg_style"
            android:drawableRight="@drawable/icon_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="找回锁定密码"
            android:textColor="@color/color_e3e6eb"
            android:textSize="16sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/btn_find"
            android:background="@color/color_bcbcbc"/>

    </RelativeLayout>

