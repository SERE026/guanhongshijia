<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/iv_coupon_pic"
        app:layout_widthPercent="15%"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginTopPercent="6%"
        app:layout_marginBottomPercent="6%"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_bg_login_btn"/>

    <TextView
        android:id="@+id/tv_coupon_num"
        app:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_coupon_pic"
        app:layout_marginTopPercent="6%"
        app:layout_marginLeftPercent="5%"
        android:singleLine="true"
        android:text="券编号：1545646"/>

    <TextView
        android:id="@+id/tv_dead_line"
        app:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_coupon_pic"
        android:layout_below="@id/tv_coupon_num"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        android:singleLine="true"
        android:text="使用期限：2016-08-01"/>

    <TextView
        android:id="@+id/tv_platform_limit"
        app:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_coupon_pic"
        android:layout_below="@id/tv_dead_line"
        app:layout_marginTopPercent="1%"
        app:layout_marginLeftPercent="5%"
        android:singleLine="true"
        android:text="平台限制：全平台"/>

    <ImageView
        android:id="@+id/iv_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="5%"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_bg_serach"/>

</android.support.percent.PercentRelativeLayout>