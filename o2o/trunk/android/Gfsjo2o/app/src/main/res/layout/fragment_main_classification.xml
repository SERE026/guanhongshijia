<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.open.androidtvwidget.view.RelativeMainLayout
        android:id="@+id/rl_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_chinese_furniture"
            app:layout_widthPercent="18%"
            app:layout_heightPercent="66.7%"
            app:layout_marginLeftPercent="9%"
            app:layout_marginTopPercent="15%"
            android:background="@color/color_d77f18"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="true"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="新中式家具"
                android:textColor="@color/color_362006"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_classical_furniture"
            app:layout_widthPercent="27%"
            app:layout_heightPercent="32.6%"
            android:layout_toRightOf="@id/rf_chinese_furniture"
            app:layout_marginTopPercent="15%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_6d4a3e"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="false"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="古典家具"
                android:textColor="@color/color_d0cecf"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_four_treasures"
            app:layout_widthPercent="14%"
            app:layout_heightPercent="32.6%"
            android:layout_below="@id/rf_classical_furniture"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:layout_toRightOf="@id/rf_chinese_furniture"
            android:background="@color/color_575654"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="true"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="文房四宝"
                android:textColor="@color/color_2f303c"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_strokes"
            app:layout_widthPercent="12.3%"
            app:layout_heightPercent="32.6%"
            android:layout_toRightOf="@id/rf_four_treasures"
            android:layout_below="@id/rf_classical_furniture"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_b1a18e"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="true"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="字画"
                android:textColor="@color/color_2f303c"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_old_tea"
            app:layout_widthPercent="17.9%"
            app:layout_heightPercent="33%"
            android:layout_toRightOf="@id/rf_classical_furniture"
            app:layout_marginTopPercent="15%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_97ac56"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="false"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="珍品古茶"
                android:textColor="@color/color_36383e"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_red_wine"
            app:layout_widthPercent="17.9%"
            app:layout_heightPercent="33%"
            android:layout_toRightOf="@id/rf_old_tea"
            app:layout_marginTopPercent="15%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_bf9e97"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="false"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="珍品红酒"
                android:textColor="@color/color_65595e"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_soft_daquan"
            app:layout_widthPercent="13%"
            app:layout_heightPercent="15.5%"
            android:layout_below="@id/rf_old_tea"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:layout_toRightOf="@id/rf_strokes"
            android:background="@color/color_2c3c5c"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="false"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="软装大全"
                android:textColor="@color/color_ecf0f1"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_decorative_daquan"
            app:layout_widthPercent="13%"
            app:layout_heightPercent="15.5%"
            android:layout_toRightOf="@id/rf_strokes"
            android:layout_below="@id/rf_soft_daquan"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_505e7b"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="true"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="装饰大全"
                android:textColor="@color/color_f9f9fa"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_classical_decorative_materials"
            app:layout_widthPercent="13%"
            app:layout_heightPercent="15.5%"
            android:layout_below="@id/rf_old_tea"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:layout_toRightOf="@id/rf_soft_daquan"
            android:background="@color/color_93928e"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="false"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="古典装饰材料"
                android:textColor="@color/color_2f303c"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_classical_lighting"
            app:layout_widthPercent="13%"
            app:layout_heightPercent="15.5%"
            android:layout_toRightOf="@id/rf_decorative_daquan"
            android:layout_below="@id/rf_classical_decorative_materials"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_faac03"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="true"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="古典灯饰"
                android:textColor="@color/color_3d3c3c"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_news"
            app:layout_widthPercent="9.3%"
            app:layout_heightPercent="15.5%"
            android:layout_below="@id/rf_red_wine"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:layout_toRightOf="@id/rf_classical_decorative_materials"
            android:background="@color/color_e86e48"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="false"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="新闻"
                android:textColor="@color/color_2d1710"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

        <com.open.androidtvwidget.view.ReflectItemView
            android:id="@+id/rf_more"
            app:layout_widthPercent="9.3%"
            app:layout_heightPercent="15.5%"
            android:layout_toRightOf="@id/rf_classical_lighting"
            android:layout_below="@id/rf_news"
            app:layout_marginTopPercent="1.5%"
            app:layout_marginLeftPercent="0.7%"
            android:background="@color/color_a29381"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:focusable="true"
            app:radius="0dp"
            app:isReflect="true"
            app:isShape="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="更多"
                android:textColor="@color/color_2d1710"
                android:textSize="20sp"/>

        </com.open.androidtvwidget.view.ReflectItemView>

    </com.open.androidtvwidget.view.RelativeMainLayout>

    <com.open.androidtvwidget.view.MainUpView
        android:id="@+id/main_up_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:upImageRes="@drawable/white_light" />

</RelativeLayout>