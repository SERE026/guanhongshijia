<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_473e45"
        app:layout_marginTopPercent="20%"
        app:layout_marginLeftPercent="32%"
        app:layout_marginRightPercent="32%"
        app:layout_marginBottomPercent="20%">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:gravity="center"
            android:text="用户注册"
            android:textColor="@color/color_bcbcbc"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            app:layout_heightPercent="11%"
            android:layout_below="@id/tv_title"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_login_avtar"
            android:drawablePadding="18dp"
            android:hint="用户名"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_phone_num"
            android:layout_width="match_parent"
            app:layout_heightPercent="11%"
            android:layout_below="@id/et_username"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_find_pwd_phone"
            android:drawablePadding="18dp"
            android:hint="请输入手机号"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            app:layout_heightPercent="11%"
            android:layout_below="@id/et_phone_num"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_bind_bank_card"
            android:drawablePadding="16dp"
            android:hint="邮箱"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            app:layout_heightPercent="11%"
            android:layout_below="@id/et_email"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:drawablePadding="20dp"
            android:hint="密码"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            app:layout_heightPercent="11%"
            android:layout_below="@id/et_password"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:drawablePadding="20dp"
            android:hint="确认密码"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            app:layout_heightPercent="11%"
            android:layout_below="@id/et_confirm_pwd"
            app:layout_marginTopPercent="4%"
            app:layout_marginLeftPercent="37%"
            app:layout_marginRightPercent="37%"
            android:background="@drawable/icon_find_pwd_btn"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>