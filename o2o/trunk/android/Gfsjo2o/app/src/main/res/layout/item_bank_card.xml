<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_bank_name"
        app:layout_widthPercent="22%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:gravity="center"
        android:text="中国农业银行"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_bank_card_num"
        app:layout_widthPercent="31%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_toRightOf="@id/tv_bank_name"
        app:layout_marginLeftPercent="5%"
        android:gravity="center"
        android:text="6228480606705173777"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_status"
        app:layout_widthPercent="16%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_toRightOf="@id/tv_bank_card_num"
        app:layout_marginLeftPercent="5%"
        android:gravity="center"
        android:text="xxxxxx"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_type"
        app:layout_widthPercent="16%"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="2%"
        app:layout_marginBottomPercent="2%"
        android:layout_toRightOf="@id/tv_status"
        app:layout_marginLeftPercent="5%"
        android:gravity="center"
        android:text="xxxxxx"
        android:textSize="12sp"/>

</android.support.percent.PercentRelativeLayout>