<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_473e45"
        app:layout_marginTopPercent="23%"
        app:layout_marginLeftPercent="32%"
        app:layout_marginRightPercent="32%"
        app:layout_marginBottomPercent="23%">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            app:layout_heightPercent="15%"
            app:layout_marginTopPercent="12%"
            android:gravity="center"
            android:text="验证支付信息"
            android:textColor="@color/color_bcbcbc"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            app:layout_heightPercent="15%"
            android:layout_below="@id/tv_title"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="25%"
            app:layout_marginRightPercent="25%"
            android:gravity="center"
            android:text="验证码已发送至与您银行账号绑定的手机"
            android:textColor="@color/color_bcbcbc"
            android:textSize="17sp"/>

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/tv_desc"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="20%"
            app:layout_marginRightPercent="20%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:hint="输入验证码"
            android:gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            app:layout_heightPercent="13%"
            android:layout_below="@id/et_verify_code"
            app:layout_marginTopPercent="10%"
            app:layout_marginLeftPercent="37%"
            app:layout_marginRightPercent="37%"
            android:background="@drawable/icon_find_pwd_btn"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>