<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_commodity_pic"
        android:layout_width="500dp"
        android:layout_marginTop="51dp"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <RelativeLayout
        android:layout_toRightOf="@id/vp_commodity_pic"
        android:layout_marginTop="72dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_bcbcbc"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:lineSpacingExtra="5dp"
            android:text="assaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaasaasssssssssssssssssssssssssssssssssasssssssssssssssssssssssssss"/>
        <TextView
            android:id="@+id/tv_title_desc"
            android:layout_below="@id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:textColor="@color/color_b3b3b4"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            android:text="assaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaasaasssssssssssssssssssssssssssssssssasssssssssssssssssssssssssss"/>

        <RelativeLayout
            android:id="@+id/rl_flag"
            android:layout_below="@id/tv_title_desc"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="31dp">
            <TextView
                android:id="@+id/tv_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售价 :"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_prices"
                android:layout_toRightOf="@id/tv_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥ 25,2222.00"
                android:textColor="@color/color_874239"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                />
            <TextView

                android:layout_toRightOf="@id/tv_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交价格40件"
              android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginLeft="70dp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_type"
            android:layout_below="@id/rl_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b3b3b4"
            android:textSize="12sp"
            android:text="类型      鱼塘七件套快来买"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_color"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b3b3b4"
            android:textSize="12sp"
            android:text="颜色      原木色"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/tv_specification"
            android:layout_below="@id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b3b3b4"
            android:textSize="12sp"
            android:text="规格      鱼塘七件套快来买"
            android:singleLine="true"/>
    <LinearLayout
        android:layout_below="@id/tv_specification"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <Button
            android:layout_weight="1"
            android:background="@drawable/icon_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/icon_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="加入购物车"
            android:paddingLeft="9dp"
            android:drawableLeft="@drawable/icon_cart"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center"/>
        <TextView
            android:layout_weight="1"
            android:background="@drawable/icon_button_bg"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="视频互动"
            android:paddingLeft="9dp"
            android:drawableLeft="@drawable/icon_vedio"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:gravity="center"/>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_b3b3b4"
            android:textSize="11sp"
            android:layout_marginBottom="19dp"
            android:text="服务承诺    七天无理由退货一年质保假一赔五"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>