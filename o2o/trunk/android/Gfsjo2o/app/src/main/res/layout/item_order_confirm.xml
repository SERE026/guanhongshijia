<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_e3e6eb">

    <ImageView
        android:id="@+id/iv_shopping_pic"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_public_image"
        app:layout_heightPercent="20%"
        app:layout_marginBottomPercent="4%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="4%"
        app:layout_widthPercent="12%" />

    <TextView
        android:id="@+id/tv_shopping_desc"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_shopping_pic"
        android:ellipsize="end"
        android:lines="2"
        android:text="bbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="6%"
        app:layout_widthPercent="45%" />

    <TextView
        android:id="@+id/tv_flag"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shopping_desc"
        android:layout_toRightOf="@id/iv_shopping_pic"
        android:maxLines="3"
        android:text="规格："
        android:textSize="14sp"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1%"
        app:layout_widthPercent="45%" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="0.10"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="10%" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_total"
        android:gravity="center"
        android:singleLine="true"
        android:text="2"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="10%" />

    <TextView
        android:id="@+id/tv_unit"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_count"
        android:gravity="center"
        android:singleLine="true"
        android:text="100030"
        app:layout_marginRightPercent="2%"
        app:layout_widthPercent="10%" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_97888a"/>

</android.support.percent.PercentRelativeLayout>