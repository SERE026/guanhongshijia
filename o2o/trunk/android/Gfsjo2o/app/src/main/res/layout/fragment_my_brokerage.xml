<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="5%"
        android:drawableLeft="@drawable/icon_dollar"
        android:drawablePadding="2dp"
        android:text="总资产"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_data_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="3%"
        android:layout_alignParentRight="true"
        app:layout_marginRightPercent="5%"
        android:text="数据截至：2016.7.20"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total"
        app:layout_marginTopPercent="4%"
        app:layout_marginLeftPercent="7%"
        android:text="0.00元"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_recently_brokerage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="5%"
        android:text="最近佣金提成：0元"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_total_brokerage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money"
        android:layout_toRightOf="@id/tv_recently_brokerage"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="5%"
        android:text="累计已获佣金：0元"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_withdraw"
        app:layout_widthPercent="6%"
        app:layout_heightPercent="4%"
        android:layout_below="@id/tv_money"
        android:layout_toRightOf="@id/tv_total_brokerage"
        app:layout_marginTopPercent="5%"
        app:layout_marginLeftPercent="8%"
        android:background="@color/color_4f2a2a"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/white"
        android:textSize="12sp"/>

    <View
        android:id="@+id/line1"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="5%"/>

    <View
        android:id="@+id/line2"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        android:layout_toRightOf="@id/line1"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"/>

    <View
        android:id="@+id/line3"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        android:layout_toRightOf="@id/line2"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"/>

    <View
        android:id="@+id/line4"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        android:layout_toRightOf="@id/line3"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"/>

    <View
        android:id="@+id/line5"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        android:layout_toRightOf="@id/line4"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"/>

    <View
        android:id="@+id/line6"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        android:layout_toRightOf="@id/line5"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"/>

    <View
        android:id="@+id/line7"
        app:layout_widthPercent="10%"
        android:layout_height="0.5dp"
        android:background="@color/color_97888a"
        android:layout_below="@id/tv_recently_brokerage"
        android:layout_toRightOf="@id/line6"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="2%"/>

    <TextView
        android:id="@+id/tv_brokerage_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        app:layout_marginTopPercent="4%"
        app:layout_marginLeftPercent="5%"
        android:text="佣金获取明细"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brokerage_detail"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="9.5%"
        android:text="日期"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brokerage_detail"
        android:layout_toRightOf="@id/tv_date"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="12%"
        android:text="订单号"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_deal_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brokerage_detail"
        android:layout_toRightOf="@id/tv_order_num"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="8.5%"
        android:text="商品成交价格"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_deduct_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brokerage_detail"
        android:layout_toRightOf="@id/tv_deal_price"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="5.5%"
        android:text="提成百分比"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_deduct_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_brokerage_detail"
        android:layout_toRightOf="@id/tv_deduct_percent"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="5%"
        android:text="佣金提成金额"
        android:textSize="13sp"/>

    <ListView
        android:id="@+id/lv_agency_fee_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_date"
        app:layout_marginTopPercent="3%"
        app:layout_marginLeftPercent="5%"
        app:layout_marginRightPercent="5%"
        app:layout_marginBottomPercent="3%"/>

</android.support.percent.PercentRelativeLayout>