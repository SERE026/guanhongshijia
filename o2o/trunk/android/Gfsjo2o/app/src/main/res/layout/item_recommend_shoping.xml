<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_shopping_pic"
        android:layout_width="match_parent"
        android:layout_height="132.5dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_public_image" />

    <TextView
        android:id="@+id/tv_title_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:text="@string/classification_software"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/tv_title_desc"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/classification_decorate"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</RelativeLayout>