<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="108.5dp"
        android:layout_marginTop="76dp"
        android:layout_marginRight="108.5dp"
        android:layout_marginBottom="90.5dp">
    <ImageView
        android:id="@+id/iv_recommend_flag_pic"
        android:layout_width="167.5dp"
        android:layout_height="match_parent"
        android:src="@drawable/icon_public_image"
        android:scaleType="fitXY"
        />
        <GridView
            android:layout_toRightOf="@+id/iv_recommend_flag_pic"
            android:id="@+id/gv_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:numColumns="4">

        </GridView>
</RelativeLayout>
</RelativeLayout>