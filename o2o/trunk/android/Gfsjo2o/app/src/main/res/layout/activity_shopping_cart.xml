<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_shopping_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/icon_small_cart"
        app:layout_marginTopPercent="6%"
        android:layout_marginLeft="77.5dp"
        android:text="@string/main_shopping_cart"
        android:textColor="@color/color_767f8e"
        android:textSize="22sp"
        />
    <android.support.percent.PercentRelativeLayout
        android:background="@drawable/shape_shopping_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginTopPercent="15%"
        app:layout_marginBottomPercent="5%"
        app:layout_marginLeftPercent="11%"
        app:layout_marginRightPercent="9%"
      >
        <TextView
            android:id="@+id/tv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部商品"
            android:textSize="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_892e1c"/>

        <android.support.percent.PercentRelativeLayout
            android:layout_marginTop="9dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_above="@id/rl_flag"
            android:layout_below="@id/tv_flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl_flag_1"
                android:background="@color/color_e5e3e2"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <CheckBox
                    android:button="@null"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/cb_big_all"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/selector_big_checkbox"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="47dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="全选"/>
                <TextView
                    android:layout_marginLeft="102dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:text="商品"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="237dp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="价格"/>

            </RelativeLayout>


            <android.support.percent.PercentRelativeLayout
                app:layout_marginTopPercent="3%"
                android:id="@+id/rl_pay_flag"
                android:layout_width="match_parent"
                app:layout_heightPercent="15%"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_long_cart"
                android:layout_alignParentBottom="true"
                app:layout_marginBottomPercent="5%">

                <TextView
                    android:id="@+id/tv_check_num"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_pay"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_572a27"
                    android:text="已选中0件商品"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/bt_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="已节省:0"/>
                <Button
                    android:id="@+id/bt_pay"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="去结算"
                   android:textSize="18sp"
                    android:layout_alignParentRight="true"
                    android:background="@color/color_572a27"/>
            </android.support.percent.PercentRelativeLayout>
            <ListView
                android:layout_above="@id/rl_pay_flag"
                android:id="@+id/lv_shopping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_fff4e8"
                android:layout_below="@id/rl_flag_1">

            </ListView>
        </android.support.percent.PercentRelativeLayout>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>