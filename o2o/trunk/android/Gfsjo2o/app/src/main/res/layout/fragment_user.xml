<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_473e45"
        app:layout_marginTopPercent="23%"
        app:layout_marginLeftPercent="32%"
        app:layout_marginRightPercent="32%"
        app:layout_marginBottomPercent="23%">

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="match_parent"
            app:layout_heightPercent="22%"
            android:gravity="center"
            android:text="账户"
            android:textColor="@color/color_bcbcbc"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            app:layout_heightPercent="15%"
            android:layout_below="@id/tv_login_title"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="16%"
            app:layout_marginRightPercent="16%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_login_avtar"
            android:drawablePadding="15dp"
            android:hint="请输入账号"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            app:layout_heightPercent="15%"
            android:layout_below="@id/et_username"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="16%"
            app:layout_marginRightPercent="16%"
            android:background="@drawable/icon_user_center_item_bg"
            android:maxLength="25"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/icon_login_pwd"
            android:drawablePadding="15dp"
            android:hint="请输入密码"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/color_959699"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_find_password"
            android:layout_width="wrap_content"
            app:layout_heightPercent="10%"
            android:layout_below="@id/et_password"
            app:layout_marginTopPercent="3%"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="16%"
            android:background="@color/color_transparent"
            android:gravity="right"
            android:text="找回密码"
            android:textColor="@color/color_a4a5a5"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            app:layout_heightPercent="15%"
            android:layout_below="@id/btn_find_password"
            app:layout_marginTopPercent="5%"
            app:layout_marginLeftPercent="30%"
            app:layout_marginRightPercent="30%"
            android:background="@drawable/icon_button_bg"
            android:gravity="center"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>