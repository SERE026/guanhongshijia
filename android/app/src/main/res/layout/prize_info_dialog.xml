<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp" 
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <Button
        android:id="@+id/dialog_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:clickable="true"
        android:padding="4dp"
        android:text="×"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/infozone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_exit"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您获得"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/prize_info_jiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5元优惠"
                android:textColor="@color/pink"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="的奖励"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/prize_info_now_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_round_bg_fill_pink_fill_pink_light"
                android:clickable="true"
                android:padding="5dp"
                android:text="立即购买"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/price_info_add_buycar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/corner_round_bg_fill_pink_fill_pink_light"
                android:clickable="true"
                android:padding="5dp"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="珍惜游戏机会，请在24小时内付款，完成订单哦"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/juli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/infozone"
        android:layout_marginTop="8dp"
        android:text="离你约有-公里"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/share"
        style="@style/txt_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/juli"
        android:layout_alignBottom="@+id/juli"
        android:layout_toLeftOf="@+id/dialog_exit"
        android:padding="4dp"
        android:text="分享" />

</RelativeLayout>