<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="cn.com.dyninfo.o2o.furniture.activity.my.AccountActivity" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <include layout="@layout/title" />
    </LinearLayout>

    <cn.com.dyninfo.o2o.furniture.view.CustomerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top"
        android:layout_marginBottom="48dp"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/corner_round_bg_normal"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="0dp"
                android:paddingTop="0dp" >

                <RelativeLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/name_tip"
                        style="@style/txt_item_black_light"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="收货人：" />

                    <EditText
                        android:id="@+id/name_input"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/name_tip"
                        android:background="@null"
                        android:maxLength="30"
                        android:hint="请输入真实姓名" />
                </RelativeLayout>

                <include layout="@layout/line_horizon" />

                <RelativeLayout
                    android:id="@+id/province_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/province_tip"
                        style="@style/txt_item_black_light"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="选择省：" />

                    <TextView
                        android:id="@+id/province_input"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/province_tip"
                        android:background="@null" />
                </RelativeLayout>

                <include layout="@layout/line_horizon" />

                <RelativeLayout
                    android:id="@+id/city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/city_tip"
                        style="@style/txt_item_black_light"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="选择市：" />

                    <TextView
                        android:id="@+id/city_input"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/city_tip"
                        android:background="@null" />
                </RelativeLayout>

                <include layout="@layout/line_horizon" />

                <RelativeLayout
                    android:id="@+id/area_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/area_tip"
                        style="@style/txt_item_black_light"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="选择区：" />

                    <TextView
                        android:id="@+id/area_input"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/area_tip"
                        android:background="@null" />
                </RelativeLayout>

                <include layout="@layout/line_horizon" />

                <RelativeLayout
                    android:id="@+id/street_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/street_tip"
                        style="@style/txt_item_black_light"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="地址街道：" />

                    <EditText
                        android:id="@+id/street_input"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/street_tip"
                        android:background="@null"
                        android:maxLength="50"
                        android:hint="请输入详细信息" />
                </RelativeLayout>

                <include layout="@layout/line_horizon" />

                <RelativeLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical|right"
                    android:paddingLeft="0dp"
                    android:paddingRight="8dp" >

                    <TextView
                        android:id="@+id/phone_tip"
                        style="@style/txt_item_black_light"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:text="手机号码：" />

                    <EditText
                        android:id="@+id/phone_input"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/phone_tip"
                        android:background="@null"
                        android:maxLength="20"
                        android:hint="请输入您的联系方式"
                        android:inputType="number" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btn_add"
                style="@style/btn_pink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:layout_margin="14dp"
                android:text="@string/sure" />
        </LinearLayout>
    </cn.com.dyninfo.o2o.furniture.view.CustomerScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <include
            layout="@layout/bottom"
            android:clickable="true" />
    </LinearLayout>

</RelativeLayout>